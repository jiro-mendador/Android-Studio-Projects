<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighter"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="2"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/expenses_tracker_icon"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_lightest"
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_weight="1"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track your weekly, monthly and yearly life expenses"
            android:textAlignment="center"
            android:textColor="@color/darkest"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_weight="1"
            />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appDesc"
            android:textAlignment="center"
            android:textColor="@color/darker"
            android:layout_weight="1"
            android:textSize="15sp" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/accent1"
            android:padding="30dp"
            android:text="Get started"
            android:textAlignment="center"
            android:textColor="@color/lightest"
            android:layout_weight="1"
            android:textSize="13sp"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>